pipeline {
    agent any

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }
        stage('Start up Selenium Grid') {
             steps {
                bat 'docker compose -f SetupSeleniumGridJenkins.yml up'
             }
        }
        stage('Gradle Build') {
            steps {
                bat './gradlew cleanTest test'
            }
        }
        stage('Shut down Selenium Grid') {
            steps {
                bat 'docker compose -f SetupSeleniumGridJenkins.yml down'
            }
        }
    }
}