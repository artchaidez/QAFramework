pipeline {
    agent any

    stages {
        stage('Start up Selenium Grid') {
             steps {
                bat 'docker compose -f SetupSeleniumGridJenkins.yml up -d'
             }
        }
        stage('Gradle Build') {
            steps {
                bat './gradlew cleanTest test'
            }
        }
    }
    post {
        always {
            bat 'docker compose -f SetupSeleniumGridJenkins.yml down'
        }
    }
}